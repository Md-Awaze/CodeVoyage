<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1>Careers</h1>
        <p>Join our team of data science experts and work on cutting-edge projects that make a real impact</p>
    </div>
</section>

<!-- Culture Section -->
<section class="culture-section">
    <div class="container">
        <div class="section-header">
            <h2><%= culture.title %></h2>
            <p><%= culture.description %></p>
        </div>
        
        <div class="culture-grid">
            <% culture.benefits.forEach(function(benefit) { %>
                <div class="culture-item">
                    <div class="culture-icon">
                        <span><%= benefit.icon %></span>
                    </div>
                    <h3><%= benefit.title %></h3>
                    <p><%= benefit.description %></p>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Open Positions -->
<section class="positions-section">
    <div class="container">
        <div class="section-header">
            <h2>Open Positions</h2>
            <p>Join our growing team and help us shape the future of data science</p>
        </div>
        
        <div class="positions-grid">
            <% openPositions.forEach(function(position) { %>
                <div class="position-card">
                    <div class="position-header">
                        <h3><%= position.title %></h3>
                        <div class="position-meta">
                            <span class="department"><%= position.department %></span>
                            <span class="location"><%= position.location %></span>
                            <span class="type"><%= position.type %></span>
                        </div>
                    </div>
                    
                    <div class="position-description">
                        <p><%= position.description %></p>
                    </div>
                    
                    <div class="position-details">
                        <div class="experience">
                            <strong>Experience:</strong> <%= position.experience %>
                        </div>
                        
                        <div class="requirements">
                            <h4>Requirements:</h4>
                            <ul>
                                <% position.requirements.forEach(function(req) { %>
                                    <li><%= req %></li>
                                <% }); %>
                            </ul>
                        </div>
                        
                        <div class="responsibilities">
                            <h4>Responsibilities:</h4>
                            <ul>
                                <% position.responsibilities.forEach(function(resp) { %>
                                    <li><%= resp %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="position-actions">
                        <a href="/contact-us" class="btn btn-primary">Apply Now</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Benefits Section -->
<section class="benefits-section">
    <div class="container">
        <div class="section-header">
            <h2>Benefits & Perks</h2>
            <p>We take care of our team with comprehensive benefits and perks</p>
        </div>
        
        <div class="benefits-grid">
            <% perks.forEach(function(perk) { %>
                <div class="benefit-item">
                    <i class="fas fa-check"></i>
                    <span><%= perk %></span>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Life at Company -->
<section class="life-section">
    <div class="container">
        <div class="section-header">
            <h2>Life at DataScience</h2>
            <p>See what it's like to work with our amazing team</p>
        </div>
        
        <div class="life-grid">
            <div class="life-item">
                <div class="life-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3>Collaborative Environment</h3>
                <p>Work with talented individuals who share your passion for data science and innovation.</p>
            </div>
            
            <div class="life-item">
                <div class="life-icon">
                    <i class="fas fa-laptop-code"></i>
                </div>
                <h3>Cutting-Edge Technology</h3>
                <p>Access to the latest tools, frameworks, and technologies in the data science ecosystem.</p>
            </div>
            
            <div class="life-item">
                <div class="life-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <h3>Continuous Learning</h3>
                <p>Regular training sessions, conferences, and opportunities to expand your skills.</p>
            </div>
            
            <div class="life-item">
                <div class="life-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <h3>Meaningful Impact</h3>
                <p>Work on projects that solve real-world problems and create positive change.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta">
    <div class="container">
        <div class="cta-content">
            <h2>Ready to Join Our Team?</h2>
            <p>If you don't see a position that fits, we'd still love to hear from you!</p>
            <a href="/contact-us" class="btn btn-primary">Get in Touch</a>
        </div>
    </div>
</section> 